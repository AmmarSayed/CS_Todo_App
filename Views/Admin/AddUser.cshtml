@model List<TodoApp.Models.Todo>

<h2>Add Todo</h2>

<form method="post" action="/User/AddTodoItem">
    <label for="todo">Todo Title:</label>
    <input type="text" name="todo" id="todo" required />

    <button type="submit">Add Todo</button>
</form>

<h3>My Todos</h3>

@if (Model.Count > 0)
{
    foreach (var todo in Model)
    {
        <p>@todo.Title</p>
    }
}
else
{
    <p>No todos found.</p>
}

<hr />

<form method="post" action="/User/ClearTodos">
    <button type="submit">Clear All Todos</button>
</form>
