@model List<string>

<h2>Add Todo</h2>

<form method="post" action="/User/AddTodoItem">
    <label for="todo">Todo Title:</label>
    <input type="text" name="todo" id="todo" required />

    <button type="submit">Add Todo</button>
</form>

<h2>Search Todo</h2>

<form method="post" asp-controller="User" asp-action="SearchTodo">
    <label for="searchTerm">Search Term:</label>
    <input type="text" name="searchTerm" id="searchTerm" required />

    <button type="submit">Search</button>
</form>

<!-- Display search result message -->
@if (!string.IsNullOrEmpty(ViewBag.SearchResult))
{
    <label>@ViewBag.SearchResult</label>
}

<hr />

<form method="post" action="/User/ClearTodos">
    <button type="submit">Clear All Todos</button>
</form>

<h2>My Todos</h2>

@if (Model != null && Model.Count > 0)
{
    foreach (var todo in Model)
    {
        <p>@todo</p>
    }
}
else
{
    <p>No todos found.</p>
}
